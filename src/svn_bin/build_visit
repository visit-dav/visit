{
   patch -p0 << \EOF
--- VTK/Utilities/DICOMParser/DICOMAppHelper.cxx.orig   2008-08-18 12:13:40.000000000 -0600
+++ VTK/Utilities/DICOMParser/DICOMAppHelper.cxx        2008-08-18 12:14:03.000000000 -0600
@@ -32,6 +32,7 @@
 #include <stdlib.h>
 #include <stdio.h>
 #include <string>
+#include <string.h>
 #include <math.h>
 #include <algorithm>
EOF
   if [[ $? != 0 ]] ; then
      echo "Unable to patch VTK. Wrong version?"
      return 1
   fi
}

