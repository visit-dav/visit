if [[ "$OPSYS" == "Darwin" ]] ; then
   export QT_FILE=${QT_FILE:-"qt-mac-opensource-src-4.4.3.tar.gz"}
   export QT_VERSION=${QT_VERSION:-"4.4.3"}
