  printf "%s%s\n" "CFITSIO_VERSION=" "${CFITSIO_VERSION}"
  printf "%s%s\n" "CFITSIO_COMPATIBILITY_VERSION=" "${CFITSIO_COMPATIBILITY_VERSION}"
  printf "%s%s\n" "CFITSIO_DIR=" "${CFITSIO_DIR}"

  printf "%s%s\n" "H5PART_FILE=" "${H5PART_FILE}"
