   if [[ $? != 0 ]] ; then
      warn "VTK patch for V5.0.0c and Darwin failed."
      return 1
   fi

   # Check for version 6.x.x (MacOS 10.2, Jaguar)
   VER=$(uname -r)
   if (( ${VER%%.*} < 7 )) ; then
       patch -p0 << \EOF
diff -rp VTK.orig/Rendering/vtkCarbonRenderWindow.cxx VTK/Rendering/vtkCarbonRenderWindow.cxx
