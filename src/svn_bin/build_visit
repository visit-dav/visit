      SET (VTKFTGL_LIBS "${VTKFTGL_LIBS};${MANGLED_MESA_LIBRARY}")
    ENDIF (FTGL_SUPPORT_MANGLE_MESA)
! ENDIF(APPLE OR WIN32)
  
  #
  # We obviously need FreeType
