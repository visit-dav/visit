##############################################################################

@SET_MAKE@
@VARIABLES@
all: message
	for dir in $(SUBDIRS); do (cd $$dir && $(MAKE) $@) || exit 1; done

BOXLIB2D=Boxlib2D
BOXLIB3D=Boxlib3D
CGNS=CGNS
EXODUS=Exodus TimeVaryingExodus
GDAL=GDAL
HDF4=Cosmos Enzo
HDF5=Tetrad SAMRAI CosmosPP Pixie FLASH
MILI=Mili
NETCDF=NETCDF
PDB=KullLite PDB
SAF=SAF
SAMPLES=Rect Hex
REQUIRED=ANALYZE ANSYS AUXFile BOV CMAT Curve2D Dune EnSight Image Lines \
 Miranda NASTRAN OVERFLOW PATRAN PLOT2D PLOT3D Point3D SAR STL Shapefile Silo \
 SimV1 Spheral TFT Tecplot Vista VTK WavefrontOBJ Xmdv
VISUS=ViSUS

OPTIONAL=

SUBDIRS=$(REQUIRED) @DB_OPTIONAL_DIRS@ @EXODUS@ @SAF@ @HDF4@ @HDF5@ @PDB@ @MILI@ @BOXLIB2D@ @BOXLIB3D@ @VISUS@ @NETCDF@ @CGNS@ @GDAL@
ALLSUBDIRS=$(REQUIRED) $(EXODUS) $(SAF) $(HDF4) $(HDF5) $(MILI) $(PDB) $(BOXLIB2D) $(BOXLIB3D) $(VISUS) $(NETCDF) $(CGNS) $(GDAL) $(SAMPLES) $(OPTIONAL)

message:
	@echo
	@echo "****************************************************************************"
	@echo "****************************************************************************"
	@echo "***"
	@echo "*** Building Databases"
	@echo "***"
	@echo "****************************************************************************"
	@echo "****************************************************************************"


dirmakefiles:
	for dir in $(ALLSUBDIRS); do if test -d $$dir; then (cd $$dir && ../../bin/xml2makefile -noprint -clobber $${dir}.xml) || exit 1; fi; done

clean:
	-$(RM) $(LIB)
	for dir in $(SUBDIRS); do (cd $$dir && test ! -f Makefile || $(MAKE) $@) || exit 1; done
	-$(RM) $(CLEAN_FILES)

distclean: clean
	if test -n "$(SUBDIRS)"; then \
		rev=""; for dir in $(SUBDIRS); do rev="$$dir $$rev"; done; \
		for dir in $$rev; do (cd $$dir && test ! -f Makefile || $(MAKE) $@); done \
	fi
	-$(RM) $(DISTCLEAN_FILES) *~ .depend core
	-$(RM) Makefile

depend: dirmakefiles
	for dir in $(SUBDIRS); do (cd $$dir && $(MAKE) $@) || exit 1; done

checkdep: dirmakefiles
	for dir in $(SUBDIRS); do (cd $$dir && $(MAKE) $@) || exit 1; done

