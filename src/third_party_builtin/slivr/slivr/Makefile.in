##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

##
## Standard targets...
##
all: message slivr

clean:
	$(RM) SLIVRConfig.cmake.in
	$(RM) -rf slivr
	$(RM) -rf $(TOPDIR)/include/slivr
	$(RM) -rf $(TOPDIR)/lib/slivr
	$(RM) $(TOPDIR)/lib/libslivrG.@SHLIB_SOEXT@
	$(RM) $(TOPDIR)/lib/libslivrV.@SHLIB_SOEXT@

SLIVRConfig.cmake.in:
	gunzip < slivr-rev-132.tar.gz | tar xvf - > /dev/null
	cp slivr/SLIVRConfig.cmake.in .

slivr: SLIVRConfig.cmake.in
	cd slivr && $(CMAKE) -D CMAKE_C_COMPILER:FILEPATH=$(CC) -D CMAKE_CXX_COMPILER:FILEPATH=$(CXX) -D BUILD_SHARED_LIBS:STRING=ON -D GLEW_INCLUDE:STRING=$(TOPDIR)/include/glew -D GLEW_LIBRARY:STRING=$(TOPDIR)/lib -D TEEM_DIR:STRING=$(TOPDIR)/lib/TEEM-1.9 -D CMAKE_INSTALL_PREFIX:PATH=$(TOPDIR) @SLIVR_CMAKE_SHARED_LINKER_FLAGS@ .
	cd slivr && $(MAKE)
	cd slivr && $(MAKE) install

##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building SLIVR"
	@echo "****************************************************************************"

@TARGETS@
