##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

# Add the GLEW include dir to both CXXFLAGS and CPPFLAGS
CXXFLAGS=-Iglew/include @CXXFLAGS@
CPPFLAGS=-Iglew/include @CPPFLAGS@
LIBS=@GL_LIBS@

##
## We distribute sources for glew with VisIt via the tar file
##
NOT_DISTRIB=glew
DISTRIB=glew-1.3.4-src.tgz

##
## Files...
##
SRC=glew/src/glew.c
HDR=
OBJ=$(SRC:.c=.o)
LIB=libGLEW

##
## Standard targets...
##
all: message $(LIBSHARED)

clean:
	$(RM) $(OBJ) $(LIBSHARED) credits.html
	$(RM) -rf glew
	$(RM) -R ../../include/glew

credits.html:
	gunzip < glew-1.3.4-src.tgz | tar xvf - > /dev/null
	cp glew/doc/credits.html .
	cp -R glew/include ../../include/glew

glew/src/glew.c: credits.html

##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building GLEW Library ($(LIB))"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
