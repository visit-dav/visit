int
ColorTableAttributes::GetColorTableIndex(const std::string &name) const
{
    int retval = -1;
    for(size_t i = 0; i < colorTableNames.size(); ++i)
    {
        if(colorTableNames[i] == name)
        {
            retval = i;
            break;
        }
    }

    return retval;
}

