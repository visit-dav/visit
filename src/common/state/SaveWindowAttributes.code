bool
SaveWindowAttributes::CurrentFormatSupportsAlpha()
{
    FileFormat ff = GetFormat();
    if (ff == PNG)
        return true;
    if (ff == TIFF)
        return true;
    if (ff == EXR)
        return true;

    return false;
}

