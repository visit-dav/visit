int
QueryList::GetWindowType(const std::string &name)
{
    int wt = -1; 
    for (size_t i = 0; i < names.size(); i++)
    {
        if (StringHelpers::CaseInsenstiveEqual(name,names[i]))
        {
            wt = winType[i];
            break;
        }
    }
    return wt;
}

