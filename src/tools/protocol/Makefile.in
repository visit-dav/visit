##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CPPFLAGS=-I. -I../../include -I../../include/visit
AVT_LIBS=-lpipeline_ser -lavtmath_ser -lavtfilters_ser -ldatabase_ser -lmir_ser -lvisit_verdict -lavtview -lplotter_ser -lavtivp_ser
VISIT_VTK_LIBS=-lvisit_vtk -lrendering_visit_vtk -llightweight_visit_vtk -lparallel_visit_vtk_ser
EXTRA_LIBS=$(AVT_LIBS) $(VISIT_VTK_LIBS) $(VTK_LIBS) $(X_LIBS) $(MESA_LIBS) $(GLEW_LIBS) $(ZLIB_LIB) $(GL_LIBS) $(PTHREAD_LIB)
LIBS=-L../../lib -lengineproxy -lenginerpc -lmdserverproxy -lmdserverrpc -lvclproxy -lvclrpc -lproxybase -lplugin -ldbatts -lexpr -lparser -lavtexceptions -lcomm -lstate -lutility -lmisc $(EXTRA_LIBS)

##
## Files...
##
SRC=dump_protocol.C
OBJ=$(SRC:.C=.o)

##
## Standard targets...
##
all: message $(tmpbin)/visitprotocol

clean:
	$(RM) $(OBJ) $(tmpbin)/visitprotocol

##
## Other targets...
##
$(tmpbin)/visitprotocol: $(OBJ)
	$(CXX) -o $@ $(OBJ) $(LDFLAGS) $(LIBS)

message:
	@echo
	@echo "****************************************************************************"
	@echo "****************************************************************************"
	@echo "***"
	@echo "*** Building visitprotocol ($(tmpbin)/visitprotocol)"
	@echo "***"
	@echo "****************************************************************************"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
