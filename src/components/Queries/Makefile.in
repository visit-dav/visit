 Queries/avtVariableSummationQuery.C \
 Queries/avtWeightedVariableSummationQuery.C


CPPFLAGS=@COMPONENT_CPPFLAGS@ @CPPFLAGS@

SEROBJ=$(SRC:.C=_ser.o)
PAROBJ=$(SRC:.C=_par.o)
LIB=libquery
SERLIBS=-lexpressions_ser -lpipeline_ser -ldbatts -lavtexceptions -lstate -lcomm -lmisc -lutility -lvisit_vtk @VTK_LIBS@ $(X_LIBS) @LIBS@
