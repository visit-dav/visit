    elif [[ "$OPSYS" == "AIX" ]]; then
        info_box "Patching Mesa for AIX . . ." >&3
        patch -p0 <<\EOF
diff -c Mesa-6.4.2.orig/configs/aix Mesa-6.4.2/configs/aix
