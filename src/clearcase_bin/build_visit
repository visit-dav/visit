       "$VISITDIR/boxlib/$VISITARCH/lib/libbox3D.a"
       tar cf Boxlib3D.h.tar *.H
       if [[ $? != 0 ]] ; then
          echo "Boxlib install failed.  Giving up"
          return 1
       fi
    fi
    $MAKE clean
